<Window x:Class="BookLendingSystem.LoanAdministratorPrivilegesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLendingSystem"
        mc:Ignorable="d"
        Title="管理者貸出権限" Height="500" Width="450">
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 図書情報入力フォーム -->
            <RowDefinition Height="Auto"/>
            <!-- ボタン群 -->
            <RowDefinition Height="*" />
            <!-- 貸出履歴リスト -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- 図書情報入力フォーム -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="10">
            <TextBlock Text="貸出者名" VerticalAlignment="Center" FontSize="15"/>
            <TextBox x:Name="LenderNameTextBox" Width="300" Margin="5"/>

            <TextBlock Text="図書タイトル" VerticalAlignment="Center" FontSize="15"/>
            <TextBox x:Name="BookTitleTextBox" Width="300" Margin="5"/>

            <TextBlock Text="著者名" VerticalAlignment="Center" FontSize="15"/>
            <TextBox x:Name="AuthorTextBox" Width="300" Margin="5"/>

            <TextBlock Text="貸出日" VerticalAlignment="Center" FontSize="15"/>
            <DatePicker x:Name="LoanDatePicker" Width="300" Margin="5"/>

            <TextBlock Text="返却期限" VerticalAlignment="Center" FontSize="15"/>
            <DatePicker x:Name="ReturnDatePicker" Width="300" Margin="5"/>
        </StackPanel>

        <!-- ボタン群 -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="登録" Width="100" Height="40" Margin="10" Background="Transparent"
                    BorderBrush="Transparent" FontSize="15" Click="RegisterButton_Click"/>
            <Button Content="更新" Width="100" Height="40" Margin="10" Background="Transparent"
                    BorderBrush="Transparent" FontSize="15" Click="UpdateButton_Click"/>
            <Button Content="削除" Width="100" Height="40" Margin="10" Background="Transparent"
                    BorderBrush="Transparent" FontSize="15" Click="DeleteButton_Click"/>
        </StackPanel>

        <!-- 貸出履歴リスト -->
        <ListBox x:Name="LoanHistoryListBox" Grid.Row="2" Grid.ColumnSpan="2" Margin="10"/>
    </Grid>
</Window>
