<Window x:Class="BookLendingSystem.ReturnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLendingSystem"
        mc:Ignorable="d"
        Title="返却画面" Height="900" Width="1000">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/LibraryBackground.jpg"/>
        </Grid.Background>
        <!-- 行と列の定義 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="140"/>
            <RowDefinition Height="Auto" MinHeight="430"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- バーコード入力欄 -->
        <TextBlock Text="バーコード" VerticalAlignment="Center" HorizontalAlignment="Left"
                   Grid.Column="0" Margin="10,0,0,0" FontSize="30" Width="120"
                   Foreground="White" Height="40"/>
        <TextBox x:Name="BarcodeTextBox" Width="270" HorizontalAlignment="Left"
                 VerticalAlignment="Center" Grid.Column="1" Margin="10,0,0,0" FontSize="16"
                 Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A"
                 BorderThickness="1" Height="34"/>

        <!-- 図書情報表示欄 -->
        <TextBlock Text="図書情報" VerticalAlignment="Center" HorizontalAlignment="Left"
                   Grid.Row="1" Grid.Column="0" Margin="10,0,0,0" FontSize="30" Width="120" 
                   Foreground="White" Height="40"/>
        <StackPanel VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="10,0,10,0" Height="571">
            <TextBlock Text="会員ID:" Foreground="White" FontSize="30"/>
            <TextBox x:Name="NameTextBox" IsReadOnly="True" Margin="5" FontSize="20"
                     Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A"
                     BorderThickness="1" Height="40"/>

            <TextBlock Text="タイトル:" Foreground="White" FontSize="30"/>
            <TextBox x:Name="TitleTextBox" IsReadOnly="True" Margin="5" FontSize="20"
                     Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A"
                     BorderThickness="1" Height="40"/>

            <TextBlock Text="著者:" Foreground="White" FontSize="30"/>
            <TextBox x:Name="AuthorTextBox" IsReadOnly="True" Margin="5" FontSize="20"
                     Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A"
                     BorderThickness="1" Height="40"/>

            <TextBlock Text="貸出日:" Foreground="White" FontSize="30"/>
            <DatePicker x:Name="RentalDateTextBox" SelectedDate="{Binding RentalDate}" Margin="5" FontSize="16" Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A" BorderThickness="1" Height="40">
                <DatePicker.CalendarStyle>
                    <Style TargetType="Calendar">
                        <Setter Property="Background" Value="#66000000"/>
                    </Style>
                </DatePicker.CalendarStyle>
            </DatePicker>

            <TextBlock Text="返却期限:" Foreground="White" FontSize="30"/>
            <DatePicker x:Name="ReturnDeadlineTextBox" SelectedDate="{Binding ReturnDeadline}" Margin="5" FontSize="16" Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A" BorderThickness="1" Height="40">
                <DatePicker.CalendarStyle>
                    <Style TargetType="Calendar">
                        <Setter Property="Background" Value="#66000000"/>
                    </Style>
                </DatePicker.CalendarStyle>
            </DatePicker>

            <TextBlock Text="返却日:" Foreground="White" FontSize="30"/>
            <DatePicker x:Name="ReturnDateTextBox" SelectedDate="{Binding ReturnDate}" Margin="5" FontSize="16" Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A" BorderThickness="1" Height="40">
                <DatePicker.CalendarStyle>
                    <Style TargetType="Calendar">
                        <Setter Property="Background" Value="#66000000"/>
                    </Style>
                </DatePicker.CalendarStyle>
            </DatePicker>
        </StackPanel>

        <!-- 返却ボタン -->
        <Button Content="返却" Width="200" Height="60" VerticalAlignment="Top"
        HorizontalAlignment="Left" Grid.Column="1" Margin="376,3,0,0"
        Click="LendingButton_Click" Background="Transparent" Foreground="White" FontSize="25" FontWeight="Bold"
        BorderBrush="Transparent" BorderThickness="2"/>

        <!-- キャンセルボタン -->
        <Button Content="キャンセル" Width="200" Height="60" VerticalAlignment="Top"
        HorizontalAlignment="Left" Grid.Column="1" Margin="376,75,0,0"
        Click="CancelButton_Click" Background="Transparent" Foreground="White" FontSize="25" FontWeight="Bold"
        BorderBrush="Transparent" BorderThickness="2"/>

        <!-- 返却履歴 -->
        <TextBlock Text="返却履歴" VerticalAlignment="Top" HorizontalAlignment="Left"
                   Grid.Row="3" Grid.Column="0" Margin="10,10,0,0" FontSize="30" Width="120"
                   Foreground="White" Height="40"/>
        <ListBox x:Name="ReturnHistoryListBox" Grid.Row="3" Grid.Column="1" Margin="10,10,10,9"
                 Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A"
                 BorderThickness="1"/>
    </Grid>
</Window>
