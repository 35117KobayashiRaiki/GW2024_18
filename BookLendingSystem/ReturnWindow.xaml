<Window x:Class="BookLendingSystem.ReturnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLendingSystem"
        mc:Ignorable="d"
        Title="返却画面" Height="750" Width="750">
    <Window.Resources>
        <!-- DatePickerのTextBox部分のスタイル -->
        <Style TargetType="DatePickerTextBox">
            <!-- 背景色を薄い黒に設定 -->
            <Setter Property="Background" Value="#66000000" />
            <!-- テキスト色を白に設定 -->
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#FF6A6A6A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="5" />
        </Style>

        <!-- DatePicker全体のスタイル -->
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="#66000000" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!-- カレンダーのスタイル -->
        <Style TargetType="Calendar">
            <!-- カレンダー全体の文字サイズを小さく設定 -->
            <Setter Property="FontSize" Value="10" />
        </Style>

        <!-- カレンダーの各日付ボタンのスタイル -->
        <Style TargetType="CalendarDayButton">
            <!-- 日付ボタンの文字サイズを小さく設定 -->
            <Setter Property="FontSize" Value="10" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/LibraryBackground.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <!-- 全体をスケーリング可能にする -->
        <Viewbox Stretch="Uniform">
            <Grid Width="750" Height="770">
                <Grid.RowDefinitions>
                    <!-- 検索機能 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 図書情報入力フォーム -->
                    <RowDefinition Height="Auto"/>
                    <!-- ボタン群 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 貸出履歴リスト -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 検索機能 -->
                <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="10">
                    <TextBox x:Name="SearchTextBox" Width="250" Margin="5" FontSize="20" Foreground="White" Background="#66000000"/>
                    <Button Content="検索" Width="100" Height="30" Margin="5" FontSize="20" Background="Transparent"
                            BorderBrush="Transparent" Foreground="White" Click="SearchButton_Click"/>
                    <Button Content="検索リセット" Width="100" Height="30" FontSize="20" Margin="5" Background="Transparent"
                            BorderBrush="Transparent" Foreground="White" Click="SearchResetButton_Click"/>
                </StackPanel>

                <!-- 図書情報入力フォーム -->
                <StackPanel Grid.Row="1" Margin="10,5,10,15">
                    <!-- ISBN番号 -->
                    <TextBlock Text="ISBN番号" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                    <TextBox x:Name="ISBNTextBox" Width="300" Height="30" FontSize="25"
                        Margin="5" Background="#66000000" Foreground="White"
                        BorderBrush="#FF6A6A6A" BorderThickness="1"
                        TextChanged="ISBNTextBox_TextChanged"/>

                    <!-- バーコード番号 -->
                    <TextBlock Text="バーコード番号" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                    <TextBox x:Name="BarcodeTextBox" Width="300" Height="25"
                             FontSize="20" Margin="5" Background="#66000000"
                             Foreground="White" BorderBrush="#FF6A6A6A"
                             BorderThickness="1" TextChanged="BarcodeTextBox_TextChanged"/>

                    <!-- 会員ID -->
                    <TextBlock Text="会員ID" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                    <TextBox x:Name="MemberIDTextBox" IsReadOnly="True" Width="300" Height="25" FontSize="20" Margin="5" Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A" BorderThickness="1"/>

                    <!-- 図書タイトル -->
                    <TextBlock Text="図書タイトル" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                    <TextBox x:Name="BookTitleTextBox" IsReadOnly="True" Width="300" Height="25" FontSize="20" Margin="5" Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A" BorderThickness="1"/>

                    <!-- 著者名 -->
                    <TextBlock Text="著者名" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                    <TextBox x:Name="AuthorTextBox" IsReadOnly="True" Width="300" Height="25" FontSize="20" Margin="5" Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A" BorderThickness="1"/>

                    <!-- 貸出日 -->
                    <TextBlock Text="貸出日" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                    <DatePicker x:Name="LoanDatePicker" Width="300" Height="45" FontSize="15" Margin="5" Background="#66000000" Foreground="White"/>

                    <!-- 返却期限 -->
                    <TextBlock Text="返却期限" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                    <DatePicker x:Name="ReturnDeadlinePicker" Width="300" Height="45" FontSize="15" Margin="5" Background="#66000000" Foreground="White"/>

                    <!-- 返却日 -->
                    <TextBlock Text="返却日" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                    <DatePicker x:Name="ReturnDatePicker" Width="300" Height="45" FontSize="15" Margin="5" Background="#66000000" Foreground="White"/>
                </StackPanel>

                <!-- ボタン群 -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,15">
                    <Button Content="返却登録" Width="100" Height="40" Margin="10" Background="Transparent"
                            BorderBrush="Transparent" FontSize="20" Foreground="White" Click="ReturnRegistrationButton_Click"/>
                    <Button Content="更新" Width="100" Height="40" Margin="10" Background="Transparent"
                            BorderBrush="Transparent" FontSize="20" Foreground="White" Click="UpdateButton_Click"/>
                    <Button Content="削除" Width="100" Height="40" Margin="10" Background="Transparent"
                            BorderBrush="Transparent" FontSize="20" Foreground="White" Click="DeleteButton_Click"/>
                    <Button Content="キャンセル" Width="100" Height="40" Margin="10" Background="Transparent"
                            BorderBrush="Transparent" FontSize="20" Foreground="White" Click="CancelButton_Click"/>
                </StackPanel>

                <!-- 貸出履歴リスト -->
                <ListView x:Name="LoanHistoryListView" Grid.Row="3" Margin="10" Foreground="White" Background="#66000000" SelectionChanged="LoanHistoryListView_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="会員ID" DisplayMemberBinding="{Binding MemberId}" Width="50"/>
                            <GridViewColumn Header="図書タイトル" DisplayMemberBinding="{Binding Title}" Width="230"/>
                            <GridViewColumn Header="著者名" DisplayMemberBinding="{Binding Author}" Width="90"/>
                            <GridViewColumn Header="貸出日" DisplayMemberBinding="{Binding LoanDate, StringFormat='yyyy/MM/dd HH:mm:ss'}" Width="120"/>
                            <GridViewColumn Header="返却期限" DisplayMemberBinding="{Binding ReturnDeadline, StringFormat='yyyy/MM/dd HH:mm:ss'}" Width="120"/>
                            <GridViewColumn Header="返却日" DisplayMemberBinding="{Binding ReturnDate, StringFormat='yyyy/MM/dd HH:mm:ss'}" Width="120"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
