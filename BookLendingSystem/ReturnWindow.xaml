<Window x:Class="BookLendingSystem.ReturnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLendingSystem"
        mc:Ignorable="d"
        Title="返却画面" Height="600" Width="550">
    <Grid Margin="20">
        <!-- 行と列の定義 -->
        <Grid.RowDefinitions>
            <!-- バーコード入力欄 -->
            <RowDefinition Height="Auto"/>
            <!-- 図書情報表示欄 -->
            <RowDefinition Height="Auto"/>
            <!-- ボタン -->
            <RowDefinition Height="Auto"/>
            <!-- 貸出履歴表示欄 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <!-- 左側エリア -->
            <ColumnDefinition Width="2*"/>
            <!-- 右側エリア -->
        </Grid.ColumnDefinitions>

        <!-- バーコード入力欄 -->
        <TextBlock Text="バーコード" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Margin="10,0,0,0" FontSize="18" Width="86"/>
        <TextBox x:Name="BarcodeTextBox" Width="270" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="10,0,0,0" />

        <!-- 図書情報表示欄 -->
        <TextBlock Text="図書情報" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0" Margin="10" FontSize="18" Width="86"/>
        <StackPanel VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="10">
            <TextBlock Text="貸出者名:" />
            <TextBox x:Name="NameTextBox" IsReadOnly="True" Margin="5"/>
            <TextBlock Text="タイトル:" />
            <TextBox x:Name="TitleTextBox" IsReadOnly="True" Margin="5"/>
            <TextBlock Text="著者:" />
            <TextBox x:Name="AuthorTextBox" IsReadOnly="True" Margin="5"/>
            <TextBlock Text="貸出日:" />
            <DatePicker x:Name="RentalDateTextBox" SelectedDate="{Binding RentalDate}" Margin="5"/>
            <TextBlock Text="返却期限:" />
            <DatePicker x:Name="ReturnDeadlineTextBox" SelectedDate="{Binding ReturnDeadline}" Margin="5"/>
            <TextBlock Text="返却日:" />
            <DatePicker x:Name="ReturnDateTextBox" SelectedDate="{Binding ReturnDate}" Margin="5"/>
        </StackPanel>

        <!-- 返却ボタン -->
        <Button Content="返却" Width="95" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Margin="298,0,0,0" Click="ReturnButton_Click"
                Background="Transparent" BorderBrush="Transparent" Opacity="0.7"/>

        <!-- 返却履歴 -->
        <TextBlock Text="返却履歴" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="0" Margin="10" FontSize="18" Width="86"/>
        <ListBox x:Name="ReturnHistoryListBox" Grid.Row="3" Grid.Column="1" Margin="10"/>
    </Grid>
</Window>
