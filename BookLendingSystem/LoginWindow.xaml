<Window x:Class="BookLendingSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLendingSystem"
        mc:Ignorable="d"
        Title="ログイン画面" Height="800" Width="1000">
    <Grid>
        <!-- ウィンドウ全体の背景に画像を設定 -->
        <Grid.Background>
            <ImageBrush ImageSource="Images/LibraryBackground.jpg"/>
        </Grid.Background>

        <!-- 図書館名 -->
        <TextBlock Text="○○○○図書館" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Grid.Row="0">
            <TextBlock.Background>
                <SolidColorBrush Color="#66000000"/>
            </TextBlock.Background>
            <TextBlock.Foreground>
                <SolidColorBrush Color="White"/>
            </TextBlock.Foreground>
        </TextBlock>

        <!-- 図書館名のアルファベット -->
        <TextBlock Text="○○○ academy library" FontSize="42" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,128,10,10">
            <TextBlock.Background>
                <SolidColorBrush Color="#66000000"/>
            </TextBlock.Background>
            <TextBlock.Foreground>
                <SolidColorBrush Color="White"/>
            </TextBlock.Foreground>
        </TextBlock>

        <!-- 中央の入力情報 -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Height="382" Width="895" Margin="0,240,0,0">
            <StackPanel.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="Margin" Value="0,10"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="BorderBrush" Value="#FF6A6A6A"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Background" Value="#66000000"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
                <Style TargetType="PasswordBox">
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="Margin" Value="0,10"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="BorderBrush" Value="#FF6A6A6A"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Background" Value="#66000000"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </StackPanel.Resources>

            <!-- バーコード入力 -->
            <TextBlock Text="バーコード" VerticalAlignment="Center" FontSize="50" Foreground="White"/>
            <TextBox x:Name="BarcodeTextBox" Width="500"/>

            <!-- 会員ID入力 -->
            <TextBlock Text="会員ID" VerticalAlignment="Center" FontSize="50" Foreground="White"/>
            <TextBox x:Name="MemberIDTextBox" Width="500"/>

            <!-- パスワード入力 -->
            <TextBlock Text="パスワード" VerticalAlignment="Center" FontSize="50" Foreground="White"/>
            <PasswordBox x:Name="PasswordBox" Width="500"/>
        </StackPanel>

        <!-- 下部のボタン -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,627,0,34" Width="430">
            <Button Content="ログイン" Width="160" Height="60" Margin="10" Background="Transparent" BorderBrush="Transparent" FontSize="40" Foreground="White" Click="RegistrationButton_Click"/>
            <Button Content="キャンセル" Width="160" Height="60" Margin="10" Background="Transparent" BorderBrush="Transparent" FontSize="40" Foreground="White" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
