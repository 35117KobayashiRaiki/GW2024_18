<Window x:Class="BookLendingSystem.LendingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLendingSystem"
        mc:Ignorable="d"
        Title="貸出画面" Height="550" Width="620">
    <Grid Margin="20">
        
        <!-- 行と列の定義 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="54"/>
            <!-- バーコード入力欄 -->
            <RowDefinition Height="Auto" MinHeight="287.75"/>
            <!-- 図書情報表示欄 -->
            <RowDefinition Height="Auto"/>
            <!-- ボタン -->
            <RowDefinition/>
            <!-- 貸出履歴表示欄 -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <!-- 左側エリア -->
            <ColumnDefinition Width="2*"/>
            <!-- 右側エリア -->
        </Grid.ColumnDefinitions>

        <!-- バーコード入力欄 -->
        <TextBlock Text="バーコード" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" Width="125" Height="40"/>
        <TextBox x:Name="BarcodeTextBox" Width="270" Height="26" HorizontalAlignment="Left"
                 VerticalAlignment="Center" Grid.Column="1" Margin="10,0,0,0" />

        <!-- 図書情報表示欄 -->
        <TextBlock Text="図書情報" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Grid.Row="1" FontSize="30" Width="125" Height="40"/>
        <StackPanel VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="10,0,10,0" Height="310">
            <TextBlock Text="会員ID:" FontSize="20"/>
            <TextBox x:Name="NameTextBox" Margin="5" Height="25"/>
            <TextBlock Text="タイトル:" FontSize="20"/>
            <TextBox x:Name="TitleTextBox" IsReadOnly="True" Margin="5" Height="25"/>
            <TextBlock Text="著者:" FontSize="20"/>
            <TextBox x:Name="AuthorTextBox" IsReadOnly="True" Margin="5" Height="25"/>
            <TextBlock Text="貸出日:" FontSize="20"/>
            <!-- DatePicker への変更 -->
            <DatePicker x:Name="RentalDatePicker" SelectedDate="{Binding RentalDate}" 
                        Height="27" Margin="5"/>
            <TextBlock Text="返却期限:" FontSize="15"/>
            <!-- DatePicker への変更 -->
            <DatePicker x:Name="ReturnDeadlineDatePicker" SelectedDate="{Binding ReturnDeadline}"
                        Height="27" Margin="5"/>
        </StackPanel>

        <!-- 貸出ボタン -->
        <Button Content="貸出" Width="122" Height="45" VerticalAlignment="Top"
                HorizontalAlignment="Left" Grid.Column="1" Margin="290,3,0,0"
                Click="LendingButton_Click" Background="Transparent" 
                BorderBrush="Transparent" Opacity="0.7"/>

        <!-- 貸出履歴 -->
        <TextBlock Text="貸出履歴" VerticalAlignment="Top" HorizontalAlignment="Center"
                   Grid.Row="3" Margin="0,10,0,0" FontSize="30" Width="125" Height="40"/>
        <ListBox x:Name="LoanHistoryListBox" Grid.Row="3" Grid.Column="1" Margin="10,10,10,10"/>
    </Grid>
</Window>
