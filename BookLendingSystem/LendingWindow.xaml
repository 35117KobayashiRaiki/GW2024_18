<Window x:Class="BookLendingSystem.LendingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLendingSystem"
        mc:Ignorable="d"
        Title="貸出画面" Height="600" Width="500"  ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/LibraryBackground.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <!-- 検索機能 -->
            <RowDefinition Height="Auto"/>
            <!-- 図書情報入力フォーム -->
            <RowDefinition Height="Auto"/>
            <!-- ボタン群 -->
            <RowDefinition Height="Auto"/>
            <!-- 貸出履歴リスト -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 検索機能 -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="SearchTextBox" Width="250" Margin="5" FontSize="15" Background="#66000000"/>
            <Button Content="検索" Width="100" Height="30" Margin="5" Background="Transparent"
                    BorderBrush="Transparent" Foreground="White" Click="SearchButton_Click"/>
        </StackPanel>

        <!-- 図書情報入力フォーム -->
        <!-- 図書情報入力フォーム -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="10">
            <!-- バーコード番号 -->
            <TextBlock Text="バーコード番号" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
            <TextBox x:Name="BarcodeTextBox" Width="300" Margin="5" Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A" BorderThickness="1"/>

            <!-- 会員ID -->
            <TextBlock Text="会員ID" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
            <TextBox x:Name="LenderNameTextBox" Width="300" Margin="5" Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A" BorderThickness="1"/>

            <!-- 図書タイトル -->
            <TextBlock Text="図書タイトル" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
            <TextBox x:Name="BookTitleTextBox" Width="300" Margin="5" Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A" BorderThickness="1"/>

            <!-- 著者名 -->
            <TextBlock Text="著者名" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
            <TextBox x:Name="AuthorTextBox" Width="300" Margin="5" Background="#66000000" Foreground="White" BorderBrush="#FF6A6A6A" BorderThickness="1"/>

            <!-- 貸出日 -->
            <TextBlock Text="貸出日" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
            <DatePicker x:Name="LoanDatePicker" Width="300" Margin="5" Background="#66000000" Foreground="White"/>

            <!-- 返却期限 -->
            <TextBlock Text="返却期限" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
            <DatePicker x:Name="ReturnDatePicker" Width="300" Margin="5" Background="#66000000" Foreground="White"/>
        </StackPanel>

        <!-- ボタン群 -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="貸出登録" Width="100" Height="40" Margin="10" Background="Transparent"
                    BorderBrush="Transparent" FontSize="15" Foreground="White" Click="RegisterLendingButton_Click"/>
            <Button Content="更新" Width="100" Height="40" Margin="10" Background="Transparent"
                    BorderBrush="Transparent" FontSize="15" Foreground="White" Click="UpdateButton_Click"/>
            <Button Content="削除" Width="100" Height="40" Margin="10" Background="Transparent"
                    BorderBrush="Transparent" FontSize="15" Foreground="White" Click="DeleteButton_Click"/>
            <Button Content="キャンセル" Width="100" Height="40" Margin="10" Background="Transparent"
                    BorderBrush="Transparent" FontSize="15" Foreground="White" Click="CancelButton_Click"/>
        </StackPanel>

        <!-- 貸出履歴リスト -->
        <ListBox x:Name="LoanHistoryListBox" Grid.Row="3" Margin="10" Background="#66000000"/>
    </Grid>
</Window>
