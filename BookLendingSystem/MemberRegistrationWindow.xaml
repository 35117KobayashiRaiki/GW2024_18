<Window x:Class="BookLendingSystem.MemberRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLendingSystem"
        mc:Ignorable="d"
        Title="MemberRegistrationWindow" Height="600" Width="800">
    <Grid>
        <!-- 図書館名 -->
        <TextBlock Text="○○○○図書館" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Grid.Row="0">
            <TextBlock.Background>
                <SolidColorBrush Color="#66000000"/>
                <!-- 半透明の背景を追加 -->
            </TextBlock.Background>
            <TextBlock.Foreground>
                <SolidColorBrush Color="White"/>
                <!-- テキスト色を白に変更 -->
            </TextBlock.Foreground>
        </TextBlock>

        <!-- 図書館名のアルファベット -->
        <TextBlock Text="○○○ academy library" FontSize="42" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,128,10,10">
            <TextBlock.Background>
                <SolidColorBrush Color="#66000000"/>
                <!-- 半透明の背景を追加 -->
            </TextBlock.Background>
            <TextBlock.Foreground>
                <SolidColorBrush Color="White"/>
                <!-- テキスト色を白に変更 -->
            </TextBlock.Foreground>
        </TextBlock>

        <!-- 中央の入力情報 -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Height="182" Width="700" Margin="0,240,0,0">
            <TextBlock Text="貸出者名" VerticalAlignment="Center" FontSize="25"/>
            <TextBox x:Name="LenderNameTextBox" Width="300"/>
            <TextBlock Text="図書タイトル" VerticalAlignment="Center" FontSize="25"/>
            <TextBox x:Name="BookTitleTextBox" Width="300" Margin="5"/>
            <TextBlock Text="著者名" VerticalAlignment="Center" FontSize="25"/>
            <TextBox x:Name="AuthorTextBox" Width="300" Margin="5"/>
        </StackPanel>

        <!-- 下部のボタン -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="280,464,0,20" Width="230" Height="100">
            <Button Content="登録" Width="100" Height="40" Margin="10" Background="Transparent" BorderBrush="Transparent" FontSize="15" Click="RegisterReturnButton_Click"/>
            <Button Content="更新" Width="100" Height="40" Margin="10" Background="Transparent" BorderBrush="Transparent" FontSize="15" Click="UpdateReturnButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
